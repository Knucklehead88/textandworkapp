@page "/chat"
@rendermode InteractiveServer


<h1>AI Assistant</h1>

<div class="container mt-4 mb-5">
    <p class="lead mb-4">
        Ask me anything about programming, technology, or general knowledge.
    </p>
    
    <ChatGptSearch OnAnswerReceived="HandleAnswer" />
</div>

@code {
    private void HandleAnswer(string answer)
    {
        // You can do something with the answer if needed
        Console.WriteLine($"Received answer: {answer.Substring(0, Math.Min(50, answer.Length))}...");
    }
}
